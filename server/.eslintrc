{
    "extends": "airbnb",
    "env": {
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "forOf": true,
            "es6": true,
            "experimentalObjectRestSpread" : true
        },
    },
    "rules": {
        "comma-dangle": 0,
        "prefer-arrow-callback": 0,
        "func-names": 0,
        "no-param-reassign": 0,
        "no-underscore-dangle": 0,
        "consistent-return": 0,
        "global-require": 0,
        "import/no-unresolved": 0,
        "new-cap": 0,
        "padded-blocks": [2, {
            "classes": "always"
        }],
        "no-multi-spaces": [0, {
            "exceptions": {
                "VariableDeclarator": true
            }
        }]
    }
}
