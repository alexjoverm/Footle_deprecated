{
    "extends": "airbnb",
    "env": {
        "node": true,
        "mocha": true
    },
    "ecmaFeatures": {
        "forOf": false,
        "jsx": false,
        "es6": false,
        "objectLiteralShorthandMethods": false,
        "objectLiteralShorthandProperties": false
    },
    "rules": {
        "object-shorthand": 0,
        "no-var": 0,
        "comma-dangle": 0,
        "indent": [2, 2, {"SwitchCase": 1}],
        "no-multi-spaces": [1, {
            "exceptions": {
                "VariableDeclarator": true
            }
        }]
    }
}
